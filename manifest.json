{
  "manifest_version": 3,
  "name": "BayAreaChess Entry Scraper",
  "version": "1.2",
  "description": "Scrapes entries and fetches live USCF ratings.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.bayareachess.com/*",
    "https://ratings-api.uschess.org/*",
    "https://ratings.uschess.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.bayareachess.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
