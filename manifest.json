{
  "manifest_version": 3,
  "name": "Smart USCF ID Scraper",
  "version": "2.1",
  "description": "Instantly grabs linked IDs and validates others.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://*/*" 
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
